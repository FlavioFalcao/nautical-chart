$page.setTitle("ADD ISSUE")

<h1>$app1Link</h1>
<form action="$app1Link" method="post">
    $csrfToken.hiddenField
    <input type="hidden" name="action" value="IssueAction"/>
    <input type="hidden" name="project" value="$project"/>
    <input type="hidden" name="version" value="$version"/>

    #set ($group = $form.issue.defaultInstance)

    <p>Hello, what is the issue?</p>

    #if (!$group.name.valid)
        <p>$group.name.message</p>
    #end

    <p>
        <h3>名称:</h3>
        <input type="text" name="$group.name.key" value="$!group.name.value"/>
        <h3>描述:</h3>
        <input type="text" name="$group.description.key" value="$!group.description.value"/>
        <h3>发起人:</h3>
        <input type="text" name="$group.originator.key" value="$!group.originator.value"/>
        <h3>负责人:</h3>
        <input type="text" name="$group.owner.key" value="$!group.owner.value"/>
        <input type="submit" name="event_submit_do_add"/>
    </p>

</form>
